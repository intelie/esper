<?xml version="1.0" encoding="UTF-8"?>
<esper_opentick_adapter>
    <!-- Connection-level information goes here -->
	<connection>
	    <hosts>
			<host name="feed1.opentick.com" port="10010"/>
			<host name="feed1.opentick.com" port="10010"/>
	    </hosts>
	    <login name="login" password="password"/>	    
	</connection>
    <!-- List of streams and engine instance destination -->
	<streams>
		<stream name="OTQuote" enable="true" engine-uri="MyEngineURI" alias="OTQuote"/>
		<stream name="OTMMQuote" enable="true" engine-uri="MyEngineURI" alias="OTMMQuote"/>
		<stream name="OTTrade" enable="true" engine-uri="MyEngineURI" alias="OTTrade"/>
		<stream name="OTBBO" enable="true" engine-uri="MyEngineURI" alias="OTBBO"/>
	</streams>
	<!-- List of masks: Each provides a combination of exchange and symbols -->
	<masks>
		<mask name="mask1">
				<!-- Exchange and comma-separated list of symbols (need not have .N suffix) -->
				<exchange-symbols exchange="NASDAQ" symbols="MSFT,VDNX"/>
		</mask>
	</masks>
	<!-- Association of masks to streams -->
	<stream-masks>
		<stream-mask mask="mask1" stream="OTQuote"/>
		<stream-mask mask="mask1" stream="OTMMQuote"/>
		<stream-mask mask="mask1" stream="OTTrade"/>
		<stream-mask mask="mask1" stream="OTBBO"/>
	</stream-masks>
</esper_opentick_adapter>