<?xml version="1.0" encoding="UTF-8"?><esper-configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../esper-configuration-1-0.xsd">		<event-type alias="MyMapEvent">		<java-util-map>		  	<map-property name="myInt" class="java.lang.Integer"/>		  	<map-property name="myDouble" class="java.lang.Double"/>	  		<map-property name="myString" class="java.lang.String"/>	  	</java-util-map>	</event-type>	<event-type alias="MyMapEventTwo">		<java-util-map>		  	<map-property name="aString" class="java.lang.String"/>		  	<map-property name="anInt" class="java.lang.Integer"/>	  	</java-util-map>	</event-type>	<ouput-adapter>		<adapter-loader class="net.esper.adapter.SpringContextLoader">			<!-- SpringApplicationContext translates into Spring 			     ClassPathXmlApplicationContext or FileSystemXmlApplicationContext etc...-->			<!-- Only one app-context of a sort could be used.			     When both attributes are used classpath and file, classpath attribute prevails -->			<classpath-app-context name="spring\jms-spring.xml"/>			<file-app-context name="F:\Esper\jmsadapter\trunk\esperio\etc\spring\jms-spring.xml"/>		</adapter-loader>	</ouput-adapter></esper-configuration>