<?xml version="1.0" encoding="UTF-8"?><esper-configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../esper-configuration-1-0.xsd">		<event-type alias="MySampleEvent" class="com.mycompany.myapp.MySampleEvent"/>	<event-type alias="MyNoSchemaXMLEventAlias">		<xmldom-type root-element-name="MyNoSchemaEvent" >			<xmldom-xpath-property property-name="element1" xpath="/myevent/element1" type="NUMBER"/>		</xmldom-type>	</event-type>		<event-type alias="MySchemaXMLEventAlias">		<xmldom-type root-element-name="MySchemaEvent" root-element-namespace="http://esper.codehaus.net/samples/schemas/simpleSchema" schema-uri="MySchemaXMLEvent.xsd" 				default-namespace="default-name-space">			<xmldom-namespace-prefix prefix="ss" namespace="http://esper.codehaus.net/samples/schemas/simpleSchema"/>			<xmldom-xpath-property property-name="element1" xpath="/myevent/element1" type="NUMBER"/>		</xmldom-type>	</event-type>	<auto-import import-name="com.mycompany.myapp.*"/></esper-configuration>