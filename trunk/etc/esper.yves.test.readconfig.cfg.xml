<?xml version="1.0" encoding="UTF-8"?><esper-configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../esper-configuration-1-0.xsd">		<!-- event-type alias="MySampleEventOne" class="net.esper.example.stockticker.eventbean.StockTick"/ -->	<!-- event-type alias="MySampleEventTwo" class="net.esper.example.stockticker.eventbean.StockTick"/ -->	<event-type alias="MyNoSchemaXMLEventAlias">		<xml-dom root-element-name="MyNoSchemaEvent" >			<xpath-property property-name="element1" xpath="/myevent/element1" type="number"/>		</xml-dom>	</event-type>		<event-type alias="MySchemaXMLEventAlias">		<xml-dom root-element-name="MySchemaEvent" root-element-namespace="samples:schemas:simpleSchema" xsi:schemaLocation="samples:schemas:simpleSchema simpleSchema.xsd" 				default-namespace="default-name-space">				<namespace-prefix prefix="ss" namespace="samples:schemas:simpleSchema"/>			<xpath-property property-name="element1" xpath="/myevent/element1" type="number"/>		</xml-dom>	</event-type>		<event-type alias="MyMapEvent">		<java-util-map>		  	<map-property name="myInt" class="java.lang.Integer"/>		  	<map-property name="myDouble" class="java.lang.Double"/>	  		<map-property name="myString" class="java.lang.String"/>		  	<!-- map-property name="myInt" class="int"/>	  		<map-property name="myString" class="string"/ -->	  			  	</java-util-map>	</event-type>	<ouput-adapter>		<adapter-loader class="net.esper.adapter.SpringContextLoader">			<!-- SpringApplicationContext translates into Spring 			     ClassPathXmlApplicationContext or FileSystemXmlApplicationContext etc...-->			<!-- Only one app-context of a sort could be used.			     When both attributes are used classpath and file, classpath prevails -->			<classpath-app-context name="spring\jms-spring.xml"/>			<file-app-context name="F:\Esper\jmsadapter\trunk\esperio\etc\spring\jms-spring.xml"/>		</adapter-loader>	</ouput-adapter>	<!-- auto-import import-name="com.mycompany.myapp.*"/ -->	<!-- auto-import import-name="com.mycompany.myapp.ClassOne"/ --></esper-configuration>