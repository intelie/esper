<?xml version="1.0" encoding="UTF-8"?><esper-configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../esper-configuration-1-0.xsd">		<event-type alias="MySampleEventOne" class="com.mycompany.myapp.MySampleEventOne"/>	<event-type alias="MySampleEventTwo" class="com.mycompany.myapp.MySampleEventTwo"/>	<event-type alias="MyNoSchemaXMLEventAlias">		<xml-dom root-element-name="MyNoSchemaEvent" >			<xpath-property property-name="element1" xpath="/myevent/element1" type="number"/>		</xml-dom>	</event-type>		<event-type alias="MySchemaXMLEventAlias">		<xml-dom root-element-name="MySchemaEvent" root-element-namespace="samples:schemas:simpleSchema" schema-resource="MySchemaXMLEvent.xsd" 				default-namespace="default-name-space">			<namespace-prefix prefix="ss" namespace="samples:schemas:simpleSchema"/>			<xpath-property property-name="element1" xpath="/myevent/element1" type="number"/>		</xml-dom>	</event-type>		<event-type alias="MyMapEvent">		<java-util-map>		  	<map-property name="myInt" class="int"/>	  		<map-property name="myString" class="string"/>	  	</java-util-map>	</event-type>		<event-type alias="MyLegacyTypeEvent" class="com.mycompany.package.MyLegacyTypeEvent">		<legacy-type accessor-style="public" code-generation="enabled">			<method-property name="mymethodprop" accessor-method="myAccessorMethod" />			<field-property name="myfieldprop" accessor-field="myFieldName" />		</legacy-type>	</event-type>	<auto-import import-name="com.mycompany.myapp.*"/>	<auto-import import-name="com.mycompany.myapp.ClassOne"/>		<database-reference name="mydb1">		<datasource-connection context-lookup-name="java:comp/env/jdbc/mydb">			<env-property name="java.naming.factory.initial" value ="com.myclass.CtxFactory"/>			<env-property name="java.naming.provider.url" value ="iiop://localhost:1050"/>		</datasource-connection>		<connection-lifecycle value="pooled"/>		<lru-cache size="10"/>	</database-reference>		<database-reference name="mydb2">		<drivermanager-connection class-name="my.sql.Driver" url="jdbc:mysql://localhost" user="myuser1" password="mypassword1">			<connection-arg name="user" value ="myuser2"/>			<connection-arg name="password" value ="mypassword2"/>			<connection-arg name="somearg" value ="someargvalue"/>		</drivermanager-connection>		<connection-settings auto-commit="false" catalog="test" read-only="true" transaction-isolation="3" />			<connection-lifecycle value="retain"/>		<expiry-time-cache max-age-seconds="60.5" purge-interval-seconds="120.1"/>	</database-reference>	<plugin-view namespace="ext0" name="myview0" factory-class="com.mycompany.MyViewFactory0" />	<plugin-view namespace="ext1" name="myview1" factory-class="com.mycompany.MyViewFactory1" />	<adapter-loader name="Loader1" class-name="net.esper.support.adapter.SupportLoaderOne">		<init-arg name="name1" value="val1"/>		<init-arg name="name2" value="val2"/>	</adapter-loader>	<adapter-loader name="Loader2" class-name="net.esper.support.adapter.SupportLoaderTwo" /></esper-configuration>