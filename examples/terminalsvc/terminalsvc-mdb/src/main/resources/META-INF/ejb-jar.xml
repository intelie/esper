<?xml version="1.0"?><!DOCTYPE ejb-jar PUBLIC           "-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN"          "http://java.sun.com/dtd/ejb-jar_2_0.dtd"><ejb-jar>    <enterprise-beans>        <message-driven>            <ejb-name>TerminalSvcMDB</ejb-name>            <ejb-class>com.espertech.esper.example.terminal.mdb.TerminalMDB</ejb-class>            <transaction-type>Container</transaction-type>            <acknowledge-mode>AUTO_ACKNOWLEDGE</acknowledge-mode>            <message-driven-destination>                <destination-type>javax.jms.Queue</destination-type>            </message-driven-destination>            <resource-ref>				<res-ref-name>jms/QCF</res-ref-name>                <res-type>javax.jms.QueueConnectionFactory</res-type>                <res-auth>Container</res-auth>            </resource-ref>        </message-driven>    </enterprise-beans></ejb-jar>