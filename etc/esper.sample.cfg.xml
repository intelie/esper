<?xml version="1.0" encoding="UTF-8"?><!-- 	Sample configuration file.--><esper-configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="esper-configuration-1-0.xsd">		<!-- Event type alias names for plain Java-object events -->		<event-type alias="MyJavaBeanEvent" class="com.mycompany.myapp.MySampleEvent"/>	<!-- Event type alias names for java.util.Map events -->		<event-type alias="MyMapEvent">		<java-util-map>			<map-property name="carId" class="int"/>			<map-property name="carName" class="string"/>			<map-property name="assembly" class="com.mycompany.Assembly"/>		</java-util-map>	</event-type>		<!-- Event type alias names for XML document object model DOM events of type org.w3c.dom.Node-->		<event-type alias="MyXMLNodeEvent">		<xml-dom root-element-name="rootelement" schema-resource="optional.xsd" default-namespace="urn:specification:xml:myschema:1">			<namespace-prefix prefix="myprefix" namespace="urn:specification:xml:myschema:1"/>			<xpath-property property-name="mycount" xpath="count(/myprefix:elementone/myprefix:elementtwo)" type="number"/>		</xml-dom>	</event-type>	<!-- Import Packages and Classes -->	<auto-import import-name="com.mycompany.mypackage.*"/>	<auto-import import-name="com.mycompany.myapp.MyUtilityClass"/>	</esper-configuration>